<Page loaded="loaded">
	<StackLayout>
		<Image src="res://logo_blue" stretch="none" horizontalAlignment="center" />
		<Image src="res://fridgeman" stretch="none" horizontalAlignment="center" />

		<TextField id="email_address" text="{{ email }}" hint="Email Address" keyboardType="email" />
		<TextField id="password" secure="true" text="{{ password }}" hint="Password" />

		<Button text="Sign in" tap="signIn" />
		<Button text="Sign up for FridgeBouncer" tap="register" />
	</StackLayout>
</Page>
